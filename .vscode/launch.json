{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Server (mock)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/golang/server",
            "env": {
                "MODE": "mock"
            }
        },
        {
            "name": "Launch Go Server (real API)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/golang/server",
            "env": {
                "MODE": "real"
            },
            // For this to work, create a .env file in the project root
            // with your API key: LOC_API_KEY=your_key_here
            "envFile": "${workspaceFolder}/.env.local"
        },
        {
            "name": "Flutter (with task run-local.sh)",
            "type": "dart",
            "request": "launch",
            "preLaunchTask": "run-local.sh",
            "program": "dart/frontend/lib/main.dart"
        }
    ]
}